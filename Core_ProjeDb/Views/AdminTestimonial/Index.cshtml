@using EntityLayer.Concrate
@model List<Testimonial>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row ">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Referans Listesi</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th> # </th>
								<th> Ad Soyad </th>
								<th> Şirket </th>
								<th> Unvan </th>
								<th> Sil </th>
								<th> Güncelle </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										<img src="@item.ImageUrl" alt="image" />
									</td>
									<td> @item.ClientName </td>
									<td> @item.Company </td>
									<td> @item.Title </td>
									<td> <a href="/AdminTestimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
									<td> <a href="/AdminTestimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
								</tr>
							}

						</tbody>
					</table>
					<a href="/AdminTestimonial/AddTestimonial/" class="btn btn-info">Yeni Referasn Ekle</a>
				</div>
			</div>
		</div>
	</div>
</div>

