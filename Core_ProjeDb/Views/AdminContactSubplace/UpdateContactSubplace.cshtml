@model EntityLayer.Concrate.Contact

@{
    ViewData["Title"] = "UpdateContactSubplace";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateContactSubplace", "AdminContactSubplace", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<p class="card-description"> Alt İletişim Güncelleme Paneli </p>
				<form class="forms-sample">

					@Html.HiddenFor(x => x.ContactId)
					@Html.Label("Başlık")
					@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
					<br />
					@Html.Label("Telefon")
					@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
					<br />
					@Html.Label("Mail")
					@Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
					<br />
					@Html.Label("Açıklama")
					@Html.TextAreaFor(x => x.Description, 6, 3, new { @class = "form-control" })
					<br />
					<button class="btn btn-info">Güncelle</button>
				</form>
			</div>
		</div>
	</div>




}







