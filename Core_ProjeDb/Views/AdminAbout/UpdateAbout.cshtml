@model EntityLayer.Concrate.About
@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateAbout", "AdminAbout", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<p class="card-description">  Güncelleme  Paneli </p>
				<form class="forms-sample">

					@Html.HiddenFor(x => x.AboutId)
					@Html.Label("Görev")
					@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
					<br />
					@Html.Label("Yaş")
					@Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
					<br />
					@Html.Label("Mail")
					@Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
					<br />
					@Html.Label("Telefon")
					@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
					<br />
					@Html.Label("Adres")
					@Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
					<br />
					@Html.Label("Görsel Yolu")
					@Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
					<br />
					@Html.Label("Açıklama")
					@Html.TextAreaFor(x => x.Description, 10, 2, new { @class = "form-control" })
					<br />
					<button class="btn btn-info">Güncelle</button>
					</form>
			</div>
		</div>
	</div>




}





