@using EntityLayer.Concrate
@model List<Experience>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Deneyimler</h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>Tarih</th>
							<th>Sil</th>
							<th>Güncele</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ExperienceId</td>
								<td>@item.Name</td>
								<td>@item.Date</td>
								<td> <a href="/AdminExperience/DeleteExperience/@item.ExperienceId" class="btn btn-danger"> Sil </a> </td>
								<td> <a href="/AdminExperience/UpdateExperience/@item.ExperienceId" class="btn btn-success"> Güncelle </a> </td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			<a href="/AdminExperience/AddExperience/" class="btn btn-info"> Yeni Deneyim Ekle </a>
		</div>

	</div>

</div>






