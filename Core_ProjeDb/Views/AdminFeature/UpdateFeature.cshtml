@model EntityLayer.Concrate.Feature
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateFeature", "AdminFeature", FormMethod.Post))
{
	@Html.HiddenFor(x => x.FeatureId)

	@Html.Label(" Başlık")
	@Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
	<br />

	@Html.Label("Ad Soyad")
	@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
	<br />

	@Html.Label("Görev")
	@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
	<br />
	<button class="btn btn-info">Güncelle</button>
}



